{
  "name": "deva",
  "version": "1.0.0",
  "private": true,
  "description": "Intelligent development assistant for Linear work item management",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  },
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SeanoNET/Deva.git"
  },
  "keywords": [
    "linear",
    "ai",
    "development",
    "assistant",
    "nextjs",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SeanoNET/Deva/issues"
  },
  "homepage": "https://github.com/SeanoNET/Deva#readme"
}
