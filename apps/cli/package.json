{
  "name": "@deva/cli",
  "version": "0.1.0",
  "description": "CLI tool for Deva - Development Assistant",
  "main": "dist/index.js",
  "bin": {
    "deva": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@deva/types": "workspace:*",
    "@deva/linear": "workspace:*",
    "@deva/ai": "workspace:*",
    "@deva/convex-shared": "workspace:*",
    "@deva/utils": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "inquirer": "^9.3.2",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.1.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.0"
  }
}