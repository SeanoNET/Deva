# AI Configuration
# Note: When using Claude Code, no API key is needed
# The AI will use Claude Code's built-in capabilities

# Linear API Configuration
LINEAR_CLIENT_ID=your_linear_client_id_here
LINEAR_CLIENT_SECRET=your_linear_client_secret_here
NEXT_PUBLIC_LINEAR_REDIRECT_URI=http://localhost:3000/api/auth/linear/callback

# Session Management (Required)
# Generate a secure session secret with: openssl rand -base64 32
SESSION_SECRET=your_32_character_or_longer_secret_here

# Convex Configuration
NEXT_PUBLIC_CONVEX_URL=your_convex_url_here
CONVEX_DEPLOYMENT=your_convex_deployment_here

# Optional: Development Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000